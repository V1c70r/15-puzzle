{
  "name": "15-puzzle",
  "version": "0.0.1",
  "description": "15 puzzle game in console",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node-dev -r tsconfig-paths/register index.ts",
    "start:dist": "node dist/index.js",
    "build": "tsc",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "lint:check": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check": "npm run test:coverage && npm run lint:fix && npm run format:fix && npm run build",
    "check:strict": "npm test && npm run lint:check && npm run format:check && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/V1c70r/15-puzzle.git"
  },
  "author": "Victor D",
  "license": "Beerware",
  "bugs": {
    "url": "https://github.com/V1c70r/15-puzzle/issues"
  },
  "homepage": "https://github.com/V1c70r/15-puzzle#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "lodash": "^4.17.20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.spec.ts": [
      "jest"
    ]
  }
}
